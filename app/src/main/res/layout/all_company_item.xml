<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/allCompanyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/allCompanyPic"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:src="@drawable/bgapps"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/allCompanyName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Nipun"
                android:textSize="16sp"
                android:textColor="@color/dark"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/allCompanyCate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Software engineer"
                android:textSize="16sp"
                android:textColor="@color/dark"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/allCompanyLoca"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gampaha"
                android:textSize="16sp"
                android:textColor="@color/dark"
                android:layout_marginLeft="10dp"/>

            <RatingBar
                android:id="@+id/allCompanyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.1"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/allCompanyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>


