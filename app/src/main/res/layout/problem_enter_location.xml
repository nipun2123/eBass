<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Problem_EnterLocation"
    android:background="#ffff"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/electricalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="3dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="51dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your location"
            android:textSize="18sp"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:padding="10dp"/>



         <EditText
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_margin="10dp"
             android:paddingHorizontal="10dp"
             android:background="@drawable/address_edittext"
             android:hint="No"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/address_edittext"
                android:paddingHorizontal="10dp"
                android:hint="Street 1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/address_edittext"
                android:paddingHorizontal="10dp"
                android:hint="Street 2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/address_edittext"
                android:paddingHorizontal="10dp"
                android:hint="City"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textAllCaps="false"
                android:text="Get your current location as your location"
                android:textSize="18sp"
                android:textColor="@color/dark"

                android:layout_marginBottom="10dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>