<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Problem_SelectCompany"
    android:background="#ffff"
    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="@string/search_company_hint"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginRight="5dp"
        />

    <Button
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_location"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_location_black_24dp"
        android:layout_marginHorizontal="20dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="51dp"
        >

        <ListView
            android:id="@+id/problemCompanyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp"
            android:layout_marginTop="5dp"
            android:longClickable="true"
            android:listSelector="@color/dot_light_screen2"
            />


    </ScrollView>

</LinearLayout>